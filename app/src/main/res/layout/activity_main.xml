<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="What is the latest Chinese dynasty?"
        android:textSize="40sp"
        android:gravity="center"
        android:background="@drawable/question_card"
        android:elevation="10dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="Qing Dynasty"
        android:textSize="40sp"
        android:visibility="invisible"
        android:background="@drawable/answer_card"
        android:elevation="10dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/answer1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tang Dynasty"
        android:textSize="30sp"
        android:background="@color/grey"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/flashcard_question"
        android:visibility="invisible"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/answer2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ming Dynasty"
        android:textSize="30sp"
        android:background="@color/grey"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/answer1"
        android:visibility="invisible"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/answer3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Qing Dynasty"
        android:textSize="30sp"
        android:background="@color/grey"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/answer2"
        android:visibility="invisible"
        tools:ignore="HardcodedText" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/visible"
        android:src="@drawable/ic_visibility_black_24dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/answer3"
        android:visibility="visible"
        android:contentDescription="Eye"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/invisible"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/answer3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="Eye with a slash"
        android:src="@drawable/ic_visibility_off_black_24dp"
        android:visibility="invisible"
        tools:ignore="HardcodedText" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/add"
        android:src="@drawable/ic_add_circle_outline_black_24dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/edit"
        android:src="@drawable/ic_edit_black_24dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:id="@+id/nextCard"
        android:src="@drawable/ic_navigate_next_black_24dp" />

</RelativeLayout>